{
  "name": "farcaster-bot",
  "version": "0.0.1",
  "description": "Farcaster bot",
  "main": "dist/app.js",
  "repository": "https://github.com/fabianferno/farcaster-bot",
  "author": "fabianferno",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "distribute": "yarn build && node --experimental-modules --es-module-specifier-resolution=node dist/app.js",
    "start": "tsc-watch --skipLibCheck --onSuccess 'node --experimental-modules --es-module-specifier-resolution=node dist/app.js'",
    "build": "tsc --skipLibCheck",
    "pretty": "prettier --check src",
    "lint": "yarn pretty && eslint --max-warnings 0 --ext ts,tsx,json src"
  },
  "dependencies": {
    "@big-whale-labs/botcaster": "^0.0.17",
    "@ethereum-attestation-service/eas-sdk": "^1.3.8",
    "@standard-crypto/farcaster-js": "5.7.0",
    "@typegoose/typegoose": "^10.3.3",
    "chatgpt": "^5.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "ethers": "5.7.2",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "mongodb": "^3.6.6",
    "mongoose": "^7.0.2",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "prettier": "^2.8.4",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.3.1"
}
